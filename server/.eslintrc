{
  "root": true,
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "jest"
  ],
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest/globals": true,
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "generators": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
  }
}
